{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom", "es2020", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
